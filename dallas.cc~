#include <avr/io.h>
#include <stdlib.h>
#include <util/delay>
#include "dallas.h"

using namespace std;

//resetowanie magistrali
unsigned char RESET_PULSE(void){
  unsigned char PRESENCE;
  CLEAR_1wire; //magistrala na poziom niski
  _delay_us(500);
  SET_1wire;//magistrala na poziom wysoki
  _delay_us(30);//czekanie az czujnik ustawi linie na poziom niski
  
  //spr. poziomu linii
  if(bit_is_clear(PORT_1wire, WE))
    PRESENCE = 1;
  else
    PRESENCE = 0;//1-odebrano bit PRESENCE; 0-stan nieaktywności
  
  _delay_us(470);
  
  //spr. poziomu linii
   //spr. poziomu linii
  if(bit_is_clear(PORT_1wire, WE))
    PRESENCE = 1;
  else
    PRESENCE = 0;
  
  return PRESENCE;
}

//wysyłanie pojedynczego bitu
void send(char bit){
  CLEAR_1wire;
  _delay_us(5);
  if(bit == 1)
    SET_1wire;
  
  _delay_us(80);
  SET_1wire;
}

//odczytanie pojedynczego bitu
unsigned char read(void){
  unsigned char PRESENCE = 0;
  CLEAR_1wire;
  _delay_us(15)
  
  if(bit_is_set(PORT_1wire,WE)
    PRESENCE = 1;
  
  return(PRESENCE);
}
  
  void send_byte(char wartosc){
    unsigned char i;
    unsigned char pom;
    for(i = 0; i< 8; i++){
      pom = wartosc >> i;
      pom &= 0x01;
      dend(pom);
    }
    _delay_us(100);
  }
  
  void read_byte(void){
     unsigned char i;
    unsigned char wartosc;
    
    for(i = 0; i<8; i++){
      if(read()) wartosc |= 0x01 <<i;
     _delay_us(15);
    }
    return(wartosc);
  }
  
  
  int cels(void){
   char sprawdz temp1, temp2;
   
   sprawdz = RESET_PULSE();
   if(sprawdz==1){
     send_byte(0xCC);
     send_byte(0x44);
     _delay_ms(750);
     
     sprawdz = RESET_PULSE();
     send_byte(0xCC);
     send_byte(0xBC);
     
     temp1 = read_byte();
     temp2 = read_byte();
     
     int temp = 0;
     temp=(int)(temp1 + (temp2*256))/16;
     
     return temp;
   }
   else 
     pakazi(-);
  }
   