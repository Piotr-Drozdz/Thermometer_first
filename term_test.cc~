#include "7seg.h"
#include "7-seg.cc"
#include <avr/io.h>
#include <util/delay.h>
using namespace std;

void pakazi(int m){
  DDRD = 254;
  if(m < 0){
    m*= -1;
    DDRD = (1>>PD7);
  }
  else{
    DDRD = (0>>PD7);
  }
  for(int k = 0; k<10; k++){
     int jed, des;
      
      jed = m%10;
      des = m/10;
      PORTC = 12;
      wyswietl_cyfre(jed);
      _delay_ms(10);
      PORTC = 10;
      wyswietl_cyfre(des);
      _delay_ms(10);
  }
}

int main(){
 DDRC = 0xff;
 DDRD = 0xff;
  while(1){
    for(int i = -99; i <100; i++){
      
      pakazi(i);
     // _delay_ms(500);
    }
  }
}

 